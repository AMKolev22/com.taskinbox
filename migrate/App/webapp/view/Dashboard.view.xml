                                    </VBox>
                                </FlexBox>
                            </content>
                        </Panel>
                        <Panel
                            id="controlsPanel"
                            class="sapUiResponsiveMargin sapUiFormContainer" 
                            headerText="Filter Tasks"
                        >
                            <content>
                                <VBox class="sapUiMediumMarginTop">
                                    <SearchField
                                        id="searchField"
                                        placeholder="Search..."
                                        width="45%"
                                        class="sapUiSmallMarginBottom"
                                    />
                                    <FlexBox
                                        direction="{device>/system/phone ? 'Column' : 'Row'}"
                                        alignItems="{device>/system/phone ? 'Stretch' : 'End'}"
                                        height="auto"
                                        wrap="{= ${device>/system/phone} ? noWrap : Wrap }"
                                    >
                                        <VBox class="sapUiSmallMarginEnd sapUiSmallMarginBottom" >
                                            <Label
                                                text="Type:"
                                                class="sapUiTinyMarginBottom"
                                            />
                                            <Select
                                                id="typeFilter"
                                                width="{device>/system/phone ? '100%' : '150px'}"
                                            >
                                                <core:Item
                                                    key=""
                                                    text="All Types"
                                                />
                                                <core:Item
                                                    key="VACATION"
                                                    text="Vacation"
                                                />
                                                <core:Item
                                                    key="EQUIPMENT"
                                                    text="Equipment"
                                                />
                                                <core:Item
                                                    key="TRAVEL"
                                                    text="Travel"
                                                />
                                            </Select>
                                        </VBox>
                                        <VBox
                                            class="sapUiSmallMarginEnd sapUiSmallMarginBottom"
                                            height="50%"
                                        >
                                            <Label
                                                text="Priority:"
                                                class="sapUiTinyMarginBottom"
                                            />
                                            <Select
                                                id="priorityFilter"
                                                width="{device>/system/phone ? '100%' : '150px'}"
                                            >
                                                <core:Item
                                                    key=""
                                                    text="All Priorities"
                                                />
                                                <core:Item
                                                    key="LOW"
                                                    text="Low"
                                                />
                                                <core:Item
                                                    key="MEDIUM"
                                                    text="Medium"
                                                />
                                                <core:Item
                                                    key="HIGH"
                                                    text="High"
                                                />
                                                <core:Item
                                                    key="URGENT"
                                                    text="Urgent"
                                                />
                                            </Select>
                                        </VBox>
                                        <VBox class="sapUiSmallMarginBottom">
                                            <Label
                                                text=" "
                                                class="sapUiTinyMarginBottom"
                                                visible="{!device>/system/phone}"
                                            />
                                            <Button
                                                id="sortButton"
                                                text="Sort"
                                                icon="sap-icon://sort"
                                                width="{device>/system/phone ? '100%' : 'auto'}"
                                            />
                                        </VBox>
                                    </FlexBox>
                                </VBox>
                            </content>
                        </Panel>
