<mvc:View
    controllerName="App.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:core="sap.ui.core">
    <Page
        backgroundDesign="Solid">
        <customHeader>
        <OverflowToolbar>
            <ToolbarSpacer />
            <Title text="{i18n>pageTitle}" level="H2" />
            <ToolbarSpacer />
        </OverflowToolbar>
        </customHeader>
        <content>
            <VBox
                fitContainer="true"
                alignItems="Center"
                justifyContent="Center">
                <items>
                    <Input
                        id="uid"
                        placeholder="Email"
                        width="250px"
                        value="{user>/email}"
                        valueState="{user>/validation/emailState}"
                        valueStateText="{user>/validation/emailMessage}"
                        change="onEmailChange" />
                    <Input
                        id="uname"
                        placeholder="Name"
                        width="250px"
                        value="{user>/name}"
                        valueState="{user>/validation/nameState}"
                        valueStateText="{user>/validation/nameMessage}"
                        change="onNameChange" />
                    <Input
                        id="pasw"
                        placeholder="Password"
                        type="Password"
                        width="250px"
                        value="{user>/password}"
                        valueState="{user>/validation/passwordState}"
                        valueStateText="{user>/validation/passwordMessage}"
                        change="onPasswordChange" />
                    <Button
                        text="Login"
                        type="Emphasized"
                        width="250px"
                        press="onLoginPress" />
                </items>
            </VBox>
        </content>
    </Page>
</mvc:View>
